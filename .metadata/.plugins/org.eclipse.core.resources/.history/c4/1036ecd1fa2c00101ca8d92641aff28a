package java_package;

public class break_keyword_for_loop {
	
	public static void main(String[] args) {
		
		
			System.out.println("break when i=7 : ");
			System.out.println(" ");
			for (int i=1; i<=10; i++) { 
			
			if(i==7) {
				break;
			}
			System.out.println("value of i : " + i);
			
			}
			
			System.out.println("break when i>7 : ");
			System.out.println(" ");
			for(int i=1; i<=10; i++) { 
				
				if(i>7) {
					break;
				}
				System.out.println("value of i : " + i);
				
				
			}
			
			for(int i=1; i<=10; i++) { 
				
				if(i==7 || i==9) {
					break;
				}
				System.out.println("value of i : " + i);
				
				
			}
		
	}

}
