package Statements_keywords_in_java;

public class continue_keyword_while_loop {
	
	public static void main(String[] args) {
		
		
			int i = 1;
			
			while (i<=5) {
				
				if(i==3) {
					i++;
					 // this we have added to break the loop because i reamins 3 and it becomes infinite otherwise. 
					continue;
				}
				System.out.println("value of i : " + i);
				i++;
			}
			
			
			// Alternative to this code is means 
			
			int j = 1;
			System.out.println("value of i : " + j);
			while (j<5) {
				j++;
				if(j==3) { 
					continue;
				}
				System.out.println("value of i : " + j);
			}
		
	}

}
