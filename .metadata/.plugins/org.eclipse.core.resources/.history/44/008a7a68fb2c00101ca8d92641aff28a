package java_package;

public class break_keyword_for_loop {
	
	public static void main(String[] args) {
		
		
			System.out.println("break when i=7 : ");
			System.out.println(" ");
			for (int i=1; i<=10; i++) { 
			
			if(i==7) {
				break;
			}
			System.out.println("value of i : " + i);
			
			}
			
			System.out.println("break when i>7 : ");
			System.out.println(" ");
			for(int i=1; i<=10; i++) { 
				
				if(i>7) {
					break;
				}
				System.out.println("value of i : " + i);
			}
			
			System.out.println("break when i=7 and i=9 : "); // it will print 1-6 only 
			System.out.println(" ");		
			for(int i=1; i<=10; i++) { 
				System.out.println(i==7 || i==9);
				if(i==7 || i==9) {
					break;
				}
				System.out.println("value of i : " + i);
				
				
			}
			
			System.out.println("break when i=7 and i=9 : "); // it will print 1-10 only 
			System.out.println(" ");		
			for(int i=1; i<=10; i++) { 
				
				System.out.println(i==7 && i==9);
				
				if(i==7 && i==9) { // in this case the if condition becomes false and  
					break;
				}
				System.out.println("value of i : " + i);
				
				
			}
		
	}

}
